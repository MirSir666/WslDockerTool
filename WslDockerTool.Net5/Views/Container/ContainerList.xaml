		<ListView Grid.Row="1" ItemsSource="{Binding Items}">
			<ListView.View>
				<GridView>
					<GridViewColumn>
						<CheckBox IsChecked="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=DataGridRow}}" />
					</GridViewColumn>
					<GridViewColumn
						Width="100"
						DisplayMemberBinding="{Binding ID}"
						Header="ID" />
					<GridViewColumn
						Width="100"
						DisplayMemberBinding="{Binding NameF}"
						Header="名称" />
					<GridViewColumn
						Width="100"
