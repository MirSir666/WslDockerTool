						Header="端口" />
					<GridViewColumn
						Width="100"
						DisplayMemberBinding="{Binding Status}"
						Header="状态" />
					<GridViewColumn
						Width="120"
						DisplayMemberBinding="{Binding Created, StringFormat={}{0:yyyy-MM-dd}}"
						Header="创建时间" />
				</GridView>
			</ListView.View>
